<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD A COUPON"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/editCouponId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="ID"
        android:textAllCaps="true"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:id="@+id/editCouponMerchId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="ID Merchant"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:id="@+id/editCouponTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:id="@+id/editCouponCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Code"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:id="@+id/editCouponUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="URL Merchant"
        android:layout_marginBottom="35dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/actionSaveCoupon"
        android:src="@drawable/ic_check_white_24dp"
        android:layout_gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginRight="20dp"
        />


</LinearLayout>